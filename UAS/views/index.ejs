</head>

<body>
    <% if (isLoggedIn) { %>
    <%- include('./partials/navbar', {isLoggedIn : isLoggedIn, username: username}); %>
    <% } else { %> <%- include('./partials/navbar', {isLoggedIn : isLoggedIn}); %> <% } %>


    <main>
        <div class="container-fluid">
            <div class="container">
                <div id="main-banner" class="carousel slide carousel-fade js--carousel" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#main-banner" data-slide-to="0" class="active"></li>
                        <li data-target="#main-banner" data-slide-to="1"></li>
                        <li data-target="#main-banner" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <% var isFirst = true%>
                        <% produks.forEach (produks => { %>
                            <% if(produks.role=='true'){ %>
                                <%if (isFirst == true){%>
                                    <%isFirst = false%>
                                        <div class="carousel-item active">
                                            <%}else{%>
                                                <div class="carousel-item">
                                                    <%}%>
                                    <div class="row">
                                <div class="col-lg-8 col-img">
                                    <a href="/produk/<%= produks._id%>"><img src="/img<%=produks.img[5]%>" class="d-block w-100"
                                            ></a>
                                </div>

                                <div class="col-lg-4 col-wrt">
                                    <a href="/produk/<%= produks._id%>">
                                        <p class="disc-desc">AVALAIBLE NOW</p>
                                        <h2><%=produks.title%></h2>
                                        <p>An online and local party game of teamwork and betrayal for 4-10 players...in
                                            space!</p>
                                    </a>
                                    <a class="morebtn" href="/produk/<%= produks._id%>">Play Now <ion-icon
                                            name="arrow-redo-circle-outline"></ion-icon></a>
                                </div>
                            </div>
                        </div>
                        <% } %>
                        <% }) %>
                    </div>
                    <a class="carousel-control-prev" href="#main-banner" role="button" data-slide="prev">
                        <span aria-hidden="true">
                            <ion-icon name="caret-back-outline"></ion-icon>
                        </span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#main-banner" role="button" data-slide="next">
                        <span aria-hidden="true">
                            <ion-icon name="caret-forward-outline"></ion-icon>
                        </span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>

            <div class="container">
                <h2 class="section-title">SPECIAL OFFERS</h2>
                <div class="row special-offer js--special-offer">
                    <% produks.forEach (produks => { %>
                        <% if(produks.role=='spesial'){ %>
                    <div class="col-lg">
                        <div class="row row-img">
                            <a href="/produk/<%= produks._id%>"><img src="/img<%=produks.img[0]%>"></a>
                        </div>
                        <div class="row game-desc">
                            <a href="/produk/<%= produks._id%>">
                                <h5><%=produks.title%></h5>
                            </a>
                        </div>
                    </div>
                    <% } %>
                    <% }) %>

                </div>
            </div>

            <div class="container ">
                <h2 class="section-title title2">Trending</h2>
                <div class="row free-games js--free-game">
                    <div class="col-lg">
                        <h3>VALORANT</h3>
                        <p>VALORANT is your global competitive stage. Itâ€™s a 5v5 tac-shooter matchup to plant or defuse
                            the Spike. More than guns and bullets, creativity is your greatest weapon.</p>

                        <a href="/produk/5fd4eac21b7b5620447858b6" role="button">PLAY FREE NOW</a>
                    </div>
                    <div class="col-lg text-center">
                        <img src="/img/valorant.png" alt="Valorant">
                    </div>
                </div>
            </div>

            <div class="container">
                <h2 class="section-title">NEW RELEASE</h2>
                <div class="row new-release js--new-release">
                    <% produks.forEach (produks => { %>
                        <% if(produks.role=='new'){ %>
                    <div class="col-lg new-game">
                        <a href="/produk/<%= produks._id%>">
                            <div class="row row-img">
                                <img src="/img<%=produks.img[0]%>">
                            </div>
                            <div class="row game-desc">
                                <h6><%=produks.title%></h6>
                                <p class="publisher"><%=produks.publisher%></p>
                            </div>
                        </a>
                    </div>
                    <% } %>
                    <% }) %>
                </div>
            </div>

            

            <div class="container">
                <h2 class="section-title">MORE FROM VIRTUAL LABS <a href='/browse' role="button">View All</a></h2>
                <div class="row js--more-from">
                    <div class="row more-from">
                        <% produks.forEach (produks => { %>
                            <% if(produks.role==''){ %>
                        <div class="col-md more-game">
                            <a href="/produk/<%= produks._id%>">
                                <div class="row row-img">
                                    <img src="/img<%=produks.img[0]%>">
                                </div>
                                <div class="row game-desc">
                                    <h6><%=produks.title%></h6>
                                    <p class="publisher"><%=produks.publusher%></p>
                                </div>
                            </a>
                        </div>
                        <% } %>
                        <% }) %>
                    </div>
                    <div class="row more-from">
                        <div class="col-md more-game">
                            <a href="disgaea.html">
                                <div class="row row-img">
                                    <img src="/img/apex.jpg">
                                </div>
                                <div class="row game-desc">
                                    <h6>Apex Legends#8482</h6>
                                    <p class="publisher">Electronic Arts</p>
                                    <p class="price">FREE</p>
                                </div>
                            </a>
                        </div>
                        <div class="col-md more-game">
                            <a href="disgaea.html">
                                <div class="row row-img">
                                    <img src="/img/nfsheat.jpg">
                                </div>
                                <div class="row game-desc">
                                    <h6>Need For Speed&#8482 Heat</h6>
                                    <p class="publisher">Electronic Arts</p>
                                    <p class="price">$59.99</p>
                                </div>
                            </a>
                        </div>
                        <div class="col-md more-game">
                            <a href="disgaea.html">
                                <div class="row row-img">
                                    <img src="/img/fifa.jpg">
                                </div>
                                <div class="row game-desc">
                                    <h6>FIFA 21</h6>
                                    <p class="publisher">Electronic Arts</p>
                                    <p class="price">$79.90</p>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

